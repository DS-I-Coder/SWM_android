<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="8dp"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:background="@color/colorBtnInactive">
            <TextView
                style="@style/Text13Bold"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                tools:text = "[분야]"/>
            <ImageButton
                android:id="@+id/img_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/test_img"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="덕성이"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_alignTop="@+id/img_profile"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_cct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적시간:"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_below="@+id/tv_nickname"
                android:layout_alignStart="@id/tv_nickname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업적 / 카테고리:"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_below="@+id/tv_cct"
                android:layout_alignStart="@id/tv_nickname" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>