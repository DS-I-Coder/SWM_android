<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterStep1Activity"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="26dp">


    <TextView
        android:id="@+id/text_registerStep1Title"
        style="@style/TextMainTitle"
        android:layout_marginBottom="23dp"
        android:text="Register" />

    <EditText
        android:id="@+id/text_registerId"
        style="@style/OutlineRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_registerStep1Title"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_registerPassword"
        style="@style/OutlineRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_registerId"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password"
        android:layout_marginBottom="23dp" />

    <Button
        android:id="@+id/Button_registerNext"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_registerPassword"
        android:text="NEXT" />
</RelativeLayout>